  <div class="container">
    <h2 class="center-align">YouTube Transcript Search</h2>

    <!-- Step 1.2: HTML Form -->
    <%= form_with(url: search_path, method: 'get', remote: true, id: "searchForm") do |form| %>
      <!-- Step 1.3: HTML Form Input Field -->
      <div class="row">
        <div class="input-field col s12">
          <%= form.text_field :query, id: "searchInput", class: "validate" %>
          <%= form.label :query, for: "searchInput" %>
        </div>
      </div>

      <!-- Step 1.4: HTML Form Submit Button -->
      <div class="row">
        <div class="input-field col s12">
          <%= form.submit "Search", class: "btn", id: "searchButton" %>
        </div>
      </div>
    <% end %>

    <!-- Step 1.5: HTML Placeholder for Search Results -->
    <div id="searchResults"></div>
  </div>